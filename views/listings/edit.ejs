<% layout('layouts/boilerplate') %>

<body>
  <div class="row mt-3">
  <div class="col-8 offset-2">
  <h1>Edit your listing</h1>
  <form enctype="multipart/form-data" class="needs-validation" novalidate method="POST" action="/listings/<%=listing._id%>?_method=PUT">

    <div>
    <label class="form-label" for="title">Title</label>
    <input
      class="form-control mb-3"
      type="text"
      value="<%=listing.title%>"
      name="listing[title]"
      id="title"
      required
    />
    <div class="valid-feedback">Title looks good!</div>
    <div class="invalid-feedback">Please enter a title for your listing.</div>
</div>

<div>
    <label class="form-label" for="description">Description</label>
    <input type="text" class="form-control mb-3" name="listing[description]"
    value="<%=listing.description%>"" id="description" required>
    <div class="valid-feedback">Description looks good!</div>
    <div class="invalid-feedback">Please enter a description for your listing.</div>
</div>



<div>
    <label class="form-label" for="imageFilename">Image Filename</label>
    <input
      type="text"
      class="form-control mb-3"
      value="<%=listing.image.filename%>"
      name="listing[image][filename]"
      id="imageFilename"
      required
    />
    <div class="valid-feedback">Image filename looks good!</div>
    <div class="invalid-feedback">Please enter a filename for your image.</div>

</div>

<div>
  <div class="mb-3">
    <p>Orignal listing image</p>
    <img src="<%=orignalImageUrl%>" alt="listing image" class="img-thumbnail" />
  </div>

    <label class="form-label" for="imageUrl">Upload new image</label>
    <input
      type="file"
      class="form-control mb-3"
      value="<%=listing.image.url%>"
      name="listing[image][url]"
      id="imageUrl"
    />
    <div class="valid-feedback">Image URL looks good!</div>
    <div class="invalid-feedback">Please enter a URL for your image.</div>
</div>

<div>
    <label class="form-label" for="location">Location</label>
    <input
      type="text"
      class="form-control mb-3"
      value="<%=listing.location%>"
      name="listing[location]"
      id="location"
      required
    />
    <div class="valid-feedback">Looks good!</div>
    <div class="invalid-feedback">Please enter a location for your listing.</div>
</div>



<div class="row">
  <div class="mb-3 col-md-4 mb-3">
    <label class="form-label" for="country">Country</label>
    <input class="form-control" type="text" name="listing[country]"
    value="<%=listing.country%>"" id="country" required>
    <div class="valid-feedback">Country looks good!</div>
    <div class="invalid-feedback">Please enter a country for your listing.</div>
</div>
<div class="mb-3 col-md-8 mb-3">
  <label class="form-label" for="price">Price</label>
  <input
    type="number"
    class="form-control"
    value="<%=listing.price%>"
    name="listing[price]"
    id="price"
    required
  />
  <div class="valid-feedback">Price looks good!</div>
  <div class="invalid-feedback">Please enter a price for your listing.
</div>
</div>

  <br />
    <button class="btn btn-dark edit-btn mt-3" type="submit">Edit</button>
  </form>
  </div>
  </div>
</body>
